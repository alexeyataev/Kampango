<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Expense_Sheet_Approval</fullName>
        <description>Expense Sheet Approval</description>
        <protected>false</protected>
        <recipients>
            <type>owner</type>
        </recipients>
        <senderAddress>nctcourses@nct.org.uk</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>NCT_Templates/Expense_Sheet_is_Approved</template>
    </alerts>
    <alerts>
        <fullName>Expense_Sheet_Approval_by_Finance</fullName>
        <description>Expense Sheet Approval by Finance</description>
        <protected>false</protected>
        <recipients>
            <type>owner</type>
        </recipients>
        <senderAddress>nctcourses@nct.org.uk</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>NCT_Templates/Expense_Sheet_is_Approved_by_Finance</template>
    </alerts>
    <alerts>
        <fullName>Expense_Sheet_Rejection</fullName>
        <description>Expense Sheet Rejection</description>
        <protected>false</protected>
        <recipients>
            <type>owner</type>
        </recipients>
        <senderAddress>nctcourses@nct.org.uk</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>NCT_Templates/Expense_Sheet_Rejected</template>
    </alerts>
    <fieldUpdates>
        <fullName>Approval_Status_change_to_Approved</fullName>
        <field>Approval_Status__c</field>
        <formula>IF($User.Id &lt;&gt; OwnerId,
 &apos;Approved&apos;,
 &apos;Draft&apos;
)</formula>
        <name>Approval Status change to Approved</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>true</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Approval_Status_change_to_Pending</fullName>
        <field>Approval_Status__c</field>
        <formula>&apos;Pending&apos;</formula>
        <name>Approval Status change to Pending</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>true</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Approval_Status_change_to_Rejected</fullName>
        <field>Approval_Status__c</field>
        <formula>IF($User.Id &lt;&gt; OwnerId,
 &apos;Rejected&apos;,
 &apos;Draft&apos;
)</formula>
        <name>Approval Status change to Rejected</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>true</reevaluateOnChange>
    </fieldUpdates>
</Workflow>
