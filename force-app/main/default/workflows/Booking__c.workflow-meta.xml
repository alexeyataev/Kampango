<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>SendEmailToClient</fullName>
        <description>SendEmailToClient</description>
        <protected>false</protected>
        <recipients>
            <field>Primary_Contact__c</field>
            <type>contactLookup</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>NCT_Templates/BookingNotificationEmail</template>
    </alerts>
    <fieldUpdates>
        <fullName>SetExpDate</fullName>
        <field>Reservation_Expiry_Date__c</field>
        <formula>Course__r.Start_Date__c - 1</formula>
        <name>SetExpDate</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>SetExpDateTo5Days</fullName>
        <field>Reservation_Expiry_Date__c</field>
        <formula>TODAY() + 5</formula>
        <name>SetExpDateTo5Days</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>SetExpDateToTenDays</fullName>
        <field>Reservation_Expiry_Date__c</field>
        <formula>TODAY() + 10</formula>
        <name>SetExpDateToTenDays</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>SetOfferEmailDate</fullName>
        <field>Offer_Email_Date__c</field>
        <formula>TODAY()</formula>
        <name>SetOfferEmailDate</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Set_Booking_to_Lapsed</fullName>
        <field>Status__c</field>
        <literalValue>Lapsed</literalValue>
        <name>Set Booking to Lapsed</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
    </fieldUpdates>
    <rules>
        <fullName>Booking%3ASendOfferEmail</fullName>
        <actions>
            <name>SendEmailToClient</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Booking__c.Status__c</field>
            <operation>equals</operation>
            <value>Reserved</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Booking%3ASetExpirationDate%3C10Days</fullName>
        <actions>
            <name>SetExpDate</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Booking__c.Status__c</field>
            <operation>equals</operation>
            <value>Reserved</value>
        </criteriaItems>
        <criteriaItems>
            <field>Booking__c.Days_Before_Course_Start__c</field>
            <operation>lessThan</operation>
            <value>10</value>
        </criteriaItems>
        <criteriaItems>
            <field>Course__c.Sub_Type__c</field>
            <operation>notEqual</operation>
            <value>Introducing Solids</value>
        </criteriaItems>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Booking%3ASetExpirationDate10Days</fullName>
        <actions>
            <name>SetExpDateToTenDays</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Booking__c.Status__c</field>
            <operation>equals</operation>
            <value>Reserved</value>
        </criteriaItems>
        <criteriaItems>
            <field>Booking__c.Days_Before_Course_Start__c</field>
            <operation>greaterOrEqual</operation>
            <value>10</value>
        </criteriaItems>
        <criteriaItems>
            <field>Course__c.Sub_Type__c</field>
            <operation>notEqual</operation>
            <value>Introducing Solids</value>
        </criteriaItems>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Booking%3ASetExpirationDate5Days</fullName>
        <actions>
            <name>SetExpDateTo5Days</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Booking__c.Status__c</field>
            <operation>equals</operation>
            <value>Reserved</value>
        </criteriaItems>
        <criteriaItems>
            <field>Course__c.Sub_Type__c</field>
            <operation>equals</operation>
            <value>Introducing Solids</value>
        </criteriaItems>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Booking%3ASetOfferEmailDate</fullName>
        <actions>
            <name>SetOfferEmailDate</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Booking__c.Status__c</field>
            <operation>equals</operation>
            <value>Reserved</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
