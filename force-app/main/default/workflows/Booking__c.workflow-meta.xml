<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Adhoc_Send_Confirmation_Email</fullName>
        <description>Adhoc Send Confirmation Email</description>
        <protected>false</protected>
        <recipients>
            <field>Primary_Contact__c</field>
            <type>contactLookup</type>
        </recipients>
        <senderAddress>nctcourses@nct.org.uk</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>NCT_Templates/Adhoc_Payment_Confirmation</template>
    </alerts>
    <alerts>
        <fullName>PractitionerNotificationOnDropInEnquiry</fullName>
        <description>PractitionerNotificationOnDropInEnquiry</description>
        <protected>false</protected>
        <recipients>
            <field>PractitionerEmail__c</field>
            <type>email</type>
        </recipients>
        <senderType>DefaultWorkflowUser</senderType>
        <template>NCT_Templates/DropInsEnquiryNotificationToPractitioner</template>
    </alerts>
    <alerts>
        <fullName>SendEmailToClient</fullName>
        <description>SendEmailToClient</description>
        <protected>false</protected>
        <recipients>
            <field>Primary_Contact__c</field>
            <type>contactLookup</type>
        </recipients>
        <senderAddress>nctcourses@nct.org.uk</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>NCT_Templates/BookingNotificationEmail</template>
    </alerts>
    <alerts>
        <fullName>SendTransferEmailToClient</fullName>
        <description>SendTransferEmailToClient</description>
        <protected>false</protected>
        <recipients>
            <field>Primary_Contact__c</field>
            <type>contactLookup</type>
        </recipients>
        <senderAddress>nctcourses@nct.org.uk</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>NCT_Templates/BookingTransferNotificationEmail</template>
    </alerts>
    <alerts>
        <fullName>SentConfirmationEmail</fullName>
        <description>SentConfirmationEmail</description>
        <protected>false</protected>
        <recipients>
            <field>Primary_Contact__c</field>
            <type>contactLookup</type>
        </recipients>
        <senderAddress>nctcourses@nct.org.uk</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>NCT_Templates/Booking_Confirmation_Email</template>
    </alerts>
    <fieldUpdates>
        <fullName>FillEmailFieldOnBooking</fullName>
        <field>PractitionerEmail__c</field>
        <formula>Course__r.Main_Practitioner__r.Email</formula>
        <name>FillEmailFieldOnBooking</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>SetExpDate</fullName>
        <field>Reservation_Expiry_Date__c</field>
        <formula>Course__r.Start_Date__c - 1</formula>
        <name>SetExpDate</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>SetExpDateTo5Days</fullName>
        <field>Reservation_Expiry_Date__c</field>
        <formula>TODAY() + 5</formula>
        <name>SetExpDateTo5Days</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>SetExpDateToTenDays</fullName>
        <field>Reservation_Expiry_Date__c</field>
        <formula>TODAY() + 10</formula>
        <name>SetExpDateToTenDays</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>SetExpirationDate_Less5</fullName>
        <field>Reservation_Expiry_Date__c</field>
        <formula>Course__r.Start_Date__c - 1</formula>
        <name>SetExpirationDate_Less5</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>SetOfferEmailDate</fullName>
        <field>Offer_Email_Date__c</field>
        <formula>TODAY()</formula>
        <name>SetOfferEmailDate</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
    </fieldUpdates>
    <rules>
        <fullName>NewDropInCreated</fullName>
        <actions>
            <name>PractitionerNotificationOnDropInEnquiry</name>
            <type>Alert</type>
        </actions>
        <actions>
            <name>FillEmailFieldOnBooking</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Course__c.Type__c</field>
            <operation>equals</operation>
            <value>Drop In</value>
        </criteriaItems>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>
