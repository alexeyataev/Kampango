    <description>This flow allows the practitioner to claim fees for completed sessions.
Version changes:
Added course sub type assigment</description>
    <formulas>
        <name>currentUserId</name>
        <dataType>String</dataType>
        <expression>{!$User.Id}</expression>
    </formulas>
    <formulas>
        <name>lastPILIname</name>
        <dataType>String</dataType>
        <expression>&#39;PILIUID-&#39; + TEXT(VALUE(RIGHT({!lastPILInumber.Name}, 10)) + 1)</expression>
    </formulas>
    <formulas>
        <name>lastPInumber</name>
        <dataType>String</dataType>
        <expression>&#39;0&#39; + IF(ISNUMBER( TEXT(VALUE({!lastPIname}) + 1)), TEXT(VALUE({!lastPIname}) + 1), &#39;3000&#39;)</expression>
    </formulas>
    <formulas>
        <name>lastThreeMonths</name>
        <dataType>Date</dataType>
        <expression>IF(MONTH(TODAY()) = 1, DATE(YEAR(TODAY()) - 1, 12 - 2, 01),DATE(YEAR(TODAY()), MONTH(TODAY()) - 3, 01))</expression>
    </formulas>
    <formulas>
        <name>nominalAccountId</name>
        <dataType>String</dataType>
        <expression>{!$Setup.Financial_Settings__c.PI_Nominal_Account_Id__c}</expression>
    </formulas>
    <formulas>
        <name>registrationCappedFees</name>
        <dataType>Number</dataType>
        <expression>{!$Setup.Financial_Settings__c.Practitioner_Registration_Capped_Fees__c}</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>registrationFeeRate</name>
        <dataType>Number</dataType>
        <expression>{!$Setup.Financial_Settings__c.Practitioner_Registration_Fees_Rate__c}</expression>
        <scale>2</scale>
    </formulas>
