    <recordLookups>
        <name>Get_Session</name>
        <label>Get Session</label>
        <locationX>466</locationX>
        <locationY>50</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Loop_List_Sessions</targetReference>
        </connector>
        <filters>
            <field>Date__c</field>
            <operator>GreaterThanOrEqualTo</operator>
            <value>
                <elementReference>lastThreeMonths</elementReference>
            </value>
        </filters>
        <filters>
            <field>Date__c</field>
            <operator>LessThanOrEqualTo</operator>
            <value>
                <elementReference>$Flow.CurrentDate</elementReference>
            </value>
        </filters>
        <filters>
            <field>Eligible_for_Claim__c</field>
            <operator>EqualTo</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <filters>
            <field>Practitioner_Fees_to_Claim__c</field>
            <operator>GreaterThan</operator>
            <value>
                <numberValue>0.0</numberValue>
            </value>
        </filters>
        <filters>
            <field>Practitioner__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>currentUserContactId</elementReference>
            </value>
        </filters>
        <object>Session__c</object>
        <outputReference>listSessions</outputReference>
        <queriedFields>Id</queriedFields>
        <queriedFields>Name</queriedFields>
        <queriedFields>Practitioner_Fees__c</queriedFields>
        <queriedFields>Course_Name__c</queriedFields>
        <queriedFields>Date__c</queriedFields>
        <queriedFields>Course__c</queriedFields>
        <queriedFields>PSA_Area__c</queriedFields>
    </recordLookups>
