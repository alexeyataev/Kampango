<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Sort_code_must_be_6_numeric_digits</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
NOT(ISBLANK(Zumzum__Bank_Sort_Code__c)),
NOT(REGEX(Zumzum__Bank_Sort_Code__c, &quot;[0-9]{6}&quot;))
)</errorConditionFormula>
    <errorDisplayField>Zumzum__Bank_Sort_Code__c</errorDisplayField>
    <errorMessage>Bank Sort Code must only contain 6 numbers.</errorMessage>
</ValidationRule>
