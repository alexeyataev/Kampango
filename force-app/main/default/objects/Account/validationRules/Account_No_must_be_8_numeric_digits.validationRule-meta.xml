<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Account_No_must_be_8_numeric_digits</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
NOT(ISBLANK(Zumzum__Bank_Account_No__c)),
NOT(REGEX(Zumzum__Bank_Account_No__c, &quot;[0-9]{8}&quot;))
)</errorConditionFormula>
    <errorDisplayField>Zumzum__Bank_Account_No__c</errorDisplayField>
    <errorMessage>Bank Account No must only contain 8 numbers.</errorMessage>
</ValidationRule>
