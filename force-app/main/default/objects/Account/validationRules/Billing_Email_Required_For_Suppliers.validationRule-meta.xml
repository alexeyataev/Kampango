<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Billing_Email_Required_For_Suppliers</fullName>
    <active>true</active>
    <description>Billing Email Required For Suppliers</description>
    <errorConditionFormula>AND(
ISBLANK(Billing_Email__c),
ISPICKVAL(Type, &quot;Supplier&quot;))</errorConditionFormula>
    <errorDisplayField>Billing_Email__c</errorDisplayField>
    <errorMessage>A billing email address is required for suppliers.</errorMessage>
</ValidationRule>
