<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PreventReunionSessionToConfirmed</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISPICKVAL(Type__c, &apos;Reunion&apos;),
ISPICKVAL(Status__c, &apos;Confirmed&apos;),
NOT(ISPICKVAL(Course__r.Status__c, &apos;Final&apos;))
)</errorConditionFormula>
    <errorMessage>Please finalise the course before confirming the Reunion.</errorMessage>
</ValidationRule>
