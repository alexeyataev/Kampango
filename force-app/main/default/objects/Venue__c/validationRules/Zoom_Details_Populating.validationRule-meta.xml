<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Zoom_Details_Populating</fullName>
    <active>true</active>
    <errorConditionFormula>OR(
AND(TEXT(Delivery_Mechanism__c) == &#39;Zoom&#39;, ISNULL(Zoom_Details__c)),
AND(TEXT(Delivery_Mechanism__c) != &#39;Zoom&#39;,
NOT(ISNULL(Zoom_Details__c)))
)</errorConditionFormula>
    <errorMessage>Zoom Details must be populated when Delivery Mechanism is Zoom</errorMessage>
</ValidationRule>
