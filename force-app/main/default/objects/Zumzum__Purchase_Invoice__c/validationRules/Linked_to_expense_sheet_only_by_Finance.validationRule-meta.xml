<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Linked_to_expense_sheet_only_by_Finance</fullName>
    <active>true</active>
    <description>PI can be created only by Finance when the ES value is present</description>
    <errorConditionFormula>NOT(
 OR(
  $Permission.Override_Purchase_Invoice_Validation,
  $Permission.Can_Post_Purchase_Invoices,
  ISBLANK( Zumzum__Expense_Sheet__c )
 )
)</errorConditionFormula>
    <errorMessage>Only Finance user can convert Expense Sheet</errorMessage>
</ValidationRule>
