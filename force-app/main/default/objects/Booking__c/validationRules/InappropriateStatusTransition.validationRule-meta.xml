<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>InappropriateStatusTransition</fullName>
    <active>true</active>
    <errorConditionFormula>AND(NOT(OR((ISPICKVAL(PRIORVALUE(Status__c ), &quot;Enquiry&quot;) &amp;&amp; ISPICKVAL(Status__c, &quot;Reserved&quot;) ), 
(ISPICKVAL(PRIORVALUE(Status__c ), &quot;Expired&quot;) &amp;&amp; ISPICKVAL(Status__c, &quot;Reserved&quot;) ))),
ISCHANGED(Status__c ))</errorConditionFormula>
    <errorDisplayField>Status__c</errorDisplayField>
    <errorMessage>Inappropriate status transition. (Possible options: Enquiry - Reserved, Expired - Reserved).</errorMessage>
</ValidationRule>
