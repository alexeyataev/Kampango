<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>InappropriateStatusTransition</fullName>
    <active>true</active>
    <errorConditionFormula>(ISPICKVAL(PRIORVALUE(Status__c ), &quot;Reservation&quot;) &amp;&amp; ISPICKVAL(Status__c, &quot;Enquiry&quot;) ) || (ISPICKVAL(PRIORVALUE(Status__c ), &quot;Confirmed&quot;) &amp;&amp; ISPICKVAL(Status__c, &quot;Reservation&quot;) ) &amp;&amp; ISCHANGED(Status__c )</errorConditionFormula>
    <errorDisplayField>Status__c</errorDisplayField>
    <errorMessage>You can&#39;t select previous status value.</errorMessage>
</ValidationRule>
