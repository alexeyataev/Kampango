<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ReservationExpiryDateCannotBeRemoved</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISCHANGED(Reservation_Expiry_Date__c),
    ISBLANK(Reservation_Expiry_Date__c),
    NOT($Permission.Override_Booking_Validation) 
)</errorConditionFormula>
    <errorDisplayField>Reservation_Expiry_Date__c</errorDisplayField>
    <errorMessage>Reservation Expiry Date can not be removed.</errorMessage>
</ValidationRule>
