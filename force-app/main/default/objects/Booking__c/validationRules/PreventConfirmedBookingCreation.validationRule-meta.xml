<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PreventConfirmedBookingCreation</fullName>
    <active>true</active>
    <errorConditionFormula>AND( ISNEW(),  ISPICKVAL(Status__c, &#39;Confirmed&#39;) )</errorConditionFormula>
    <errorDisplayField>Status__c</errorDisplayField>
    <errorMessage>Confirmed status is not allowed on creation.</errorMessage>
</ValidationRule>
