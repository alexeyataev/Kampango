<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Check_Sessions_and_Practitioners</fullName>
    <active>true</active>
    <errorConditionFormula>ISCHANGED(Status__c) &amp;&amp; ISPICKVAL(PRIORVALUE(Status__c), &quot;Draft&quot;) &amp;&amp; ISPICKVAL(Status__c, &quot;Final&quot;) &amp;&amp; OR(Count_of_Unconfirmed_Non_Reunion_Session__c &gt; 0, Count_of_Sessions_Without_Practitioner__c &gt; 0, Number_of_Sessions__c &lt; 1)</errorConditionFormula>
    <errorMessage>Please ensure that all sessions have a practitioner assigned and all non-reunion sessions are confirmed.</errorMessage>
</ValidationRule>
