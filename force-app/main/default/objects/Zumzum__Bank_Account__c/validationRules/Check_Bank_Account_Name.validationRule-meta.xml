<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Check_Bank_Account_Name</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
NOT(ISBLANK(Name)),
NOT(REGEX(Name, &quot;^[A-Z0-9-/.&amp; ]+$&quot;))
)</errorConditionFormula>
    <errorDisplayField>Name</errorDisplayField>
    <errorMessage>Bank Account Name must only contain uppercase letters, numbers, spaces, hyphens, full stops, ampersands and soliduses.</errorMessage>
</ValidationRule>
