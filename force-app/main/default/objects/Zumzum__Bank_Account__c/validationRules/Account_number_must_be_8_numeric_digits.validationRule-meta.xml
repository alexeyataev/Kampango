<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Account_number_must_be_8_numeric_digits</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
NOT(ISBLANK(Zumzum__Account_Number__c)), 
NOT(REGEX(Zumzum__Account_Number__c, &quot;[0-9]{8}&quot;))
)</errorConditionFormula>
    <errorDisplayField>Zumzum__Account_Number__c</errorDisplayField>
    <errorMessage>Bank Account No must only contain 8 numbers.</errorMessage>
</ValidationRule>
